import math

# Input the radius of the circle and the side length of the square
radius = float(input("Enter the radius of the circle: "))
sideLength = float(input("Enter the side length of the square: "))

# Calculate the area of the circle and the area of the square
circleArea = math.pi * radius ** 2
squareArea = sideLength ** 2

# Compare the areas
if circleArea > squareArea:
    comparison = "greater than"
elif circleArea < squareArea:
    comparison = "less than"
else:
    comparison = "equal to"

# Display the results
print(f"The area of the circle is {circleArea:.2f}")
print(f"The area of the square is {squareArea:.2f}")
print(f"The area of the circle is {comparison} the area of the square.")